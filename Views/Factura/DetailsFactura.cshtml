@model MagazinJocuriVideo.Models.DetaliiIstoricFacturaModels

@{
    ViewBag.Title = "DetailsFactura";
}
<style>
    th, td {
        text-align: center;
        padding-left: 35px;
    }

    .DivCentrat {
        display: flex;
        justify-content: center;
    }
</style>
<h2 style="text-align:center;">Detalii factura</h2>
<br />
<div>
    <div class="DivCentrat">
        <table style="text-align:center; font-size:25px; ">
            <tr>
                <th>
                    <b>@Html.DisplayNameFor(model => model.Adresa)</b>
                </th>
                <th>
                    <b> @Html.DisplayNameFor(model => model.Data)</b>
                </th>
                <th>
                    <b>  @Html.DisplayNameFor(model => model.Total)</b>
                </th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Adresa)
                </td>

                <td>
                    @Html.DisplayFor(model => model.Data)
                </td>

                <td>
                    @Html.DisplayFor(model => model.Total)
                </td>
            </tr>
        </table>
    </div>
    <br />
    <br />
    <table style="text-align:center; font-size:15px; ">
        <tr>
            <th>Nume</th>
            <th>Descriere</th>
            <th>Pret</th>
            <th></th>
        </tr>
        @foreach (var item in Model.ProduseCumparate())
        {
            <tr >
                <td>
                    @Html.DisplayFor(modelItem => item.NumeProdus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescriereProdus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pret)
                </td>
                <td>
                    <img src="~/Poze/@item.NumeImagine" width="350" height="250" />
                </td>
            </tr>
            <tr>
                <td><br /></td>
            </tr>
        }
     
    </table>
</div>
<br />
<p>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    @Html.ActionLink("Back to List", "Index")
</p>

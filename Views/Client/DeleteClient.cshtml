@model MagazinJocuriVideo.Models.ClientiModels

@{
    ViewBag.Title = "DeleteClient";
}
<style>
    th, td {
        text-align: center;
        padding-left: 35px;
    }

    .DivCentrat {
        display: flex;
        justify-content: center;
    }
</style>
<h2 style="text-align:center;">Stergere client</h2>

<h3 style="text-align:center;">Are you sure you want to delete this?</h3>
<br />
<div class="DivCentrat">
    <table style="text-align:center; font-size:15px; ">
        <tr>
            <th>
                Nume
            </th>
            <th>
                Prenume
            </th>
            <th>
                Telefon
            </th>
            <th>
                Email
            </th>
            <th>
                Adresa
            </th>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Nume)
            </td>
            <td>
                @Html.DisplayFor(model => model.Prenume)
            </td>
            <td>
                @Html.DisplayFor(model => model.Telefon)
            </td>
            <td>
                @Html.DisplayFor(model => model.Email)
            </td>
            <td>
                @Html.DisplayFor(model => model.Adresa)
            </td>
        </tr>

    </table>

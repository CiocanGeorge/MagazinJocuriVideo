@model IEnumerable<MagazinJocuriVideo.Models.CosVizualizare>

@{
    ViewBag.Title = "Index";
}
<style>
    th, td {
        text-align: center;
    }

    p {
        text-align: center;
    }

    .bordura {
        border-bottom: 1px solid #000;
    }
</style>
<h2 style="text-align:center;">Cos cumparaturi</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nume)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantitate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pret)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantitate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdCos }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdCos })
            </td>
        </tr>
    }

</table>

<br />
<p style="font-size:20px; text-align:right;">@Html.ActionLink("Finalizeaza Comanda", "Create", "Factura")</p>
